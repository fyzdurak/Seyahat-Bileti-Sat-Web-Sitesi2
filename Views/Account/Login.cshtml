@model BiletSatisWebApp.Models.LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <h2 class="text-center display-4 text-primary">Giriş Yap</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-4">

                    <form asp-action="Login" method="post">
                        <input type="hidden" id="userTypeInput" name="UserType" value="User" />

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-mail</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-check mb-3">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="RememberMe" />
                            <label class="form-check-label" for="RememberMe">Beni Hatırla</label>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">Giriş Yap</button>
                        </div>
                        <div class="text-center mt-3">
                            <p>
                                Henüz kaydolmadınız mı?
                                <a asp-controller="Account" asp-action="Register">Kaydol</a>
                            </p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



