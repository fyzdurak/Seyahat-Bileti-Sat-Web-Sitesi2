@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model BiletSatisWebApp.Models.Trip


@{
    ViewData["Title"] = "Bilet Satışa Çıkar";
}

<h2 class="display-4 text-primary">Bilet Satışa Çıkar</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="SellTicket" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="FromCity" class="form-label"> Nereden</label>
        <input asp-for="FromCity" class="form-control" />
        <span asp-validation-for="FromCity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ToCity" class="form-label">Nereye</label>
        <input asp-for="ToCity" class="form-control" />
        <span asp-validation-for="ToCity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartureDate" class="form-label">Kalkış Tarihi</label>
        <input asp-for="DepartureDate" type="date" class="form-control" min="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DepartureDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartureTime" class="form-label">Kalkış Saati</label>
        <input asp-for="DepartureTime" type="time" class="form-control" required/>
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="TransportType" class="form-label">Ulaşım Türü</label>
        <select asp-for="TransportType" class="form-select">
            <option value="">Seçiniz</option>
            <option>Otobüs</option>
            <option>Uçak</option>
            <option>Tren</option>
        </select>
        <span asp-validation-for="TransportType" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SeatLayout" class="form-label">Koltuk Düzeni</label>
        <input asp-for="SeatLayout" class="form-control" readonly id="SeatLayout" />
    </div>

    <script>
        document.querySelector("select[name='TransportType']").addEventListener("change", function () {
            const layoutInput = document.getElementById("SeatLayout");
            switch (this.value) {
                case "Otobüs":
                    layoutInput.value = "2+2";
                    break;
                case "Tren":
                    layoutInput.value = "2+3";
                    break;
                case "Uçak":
                    layoutInput.value = "3+3";
                    break;
                default:
                    layoutInput.value = "";
            }
        });
    </script>

    <div class="mb-3">
        <label asp-for="TicketCount" class="form-label">Bilet Sayısı</label>
        <input asp-for="TicketCount" type="number" min="1" class="form-control" />
        <span asp-validation-for="TicketCount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3 ">
        <label for="Price">Bilet Fiyatı (₺)</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mb-5">Satışa Çıkar</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
