@model BiletSatisWebApp.Models.IletisimModel
@{
    ViewData["Title"] = "İletişim";
}

<div class="container my-5">
    <h1 class="text-center display-4 text-primary">İletişim</h1>
    <p class="text-center lead text-muted">
        Bizimle iletişime geçmek için aşağıdaki bilgileri kullanabilir veya formu doldurabilirsiniz.
    </p>

    <!-- İletişim Bilgileri -->
    <div class="row text-center mt-3 mb-3">
        <div class="col-md-6 offset-md-3 mb-3">
            <div class="p-4 shadow rounded h-100" style="background-color:#f3f8ff;">
                <i class="bi bi-telephone-fill fs-1 text-success mb-3"></i>
                <h5>Telefon</h5>
                <p class="mb-0">+90 246 489 55 39</p>
            </div>
        </div>
    </div>


    <!-- Mesaj Gönder Formu -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h4 class="mb-4 text-center text-primary">Bize Mesaj Gönderin</h4>
                    <form asp-action="Iletisim" method="post">
                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label">Ad-Soyad</label>
                            <input asp-for="AdSoyad" class="form-control" placeholder="Adınızı ve soyadınızı girin" />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Telefon" class="form-label"></label>
                            <input asp-for="Telefon" class="form-control" placeholder="Telefon numaranızı girin" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Mesaj" class="form-label"></label>
                            <textarea asp-for="Mesaj" class="form-control" rows="5" placeholder="Mesajınızı buraya yazın"></textarea>
                            <span asp-validation-for="Mesaj" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-5">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="mesajModal" tabindex="-1" aria-labelledby="mesajModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mesajModalLabel">Teşekkürler!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                Mesajınız başarıyla gönderildi. En kısa sürede size geri dönüş yapacağız.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var showModal = '@TempData["ShowModal"]';
            if (showModal.toLowerCase() === "true") {
                var modal = new bootstrap.Modal(document.getElementById('mesajModal'));
                modal.show();
            }
        });
    </script>
}
